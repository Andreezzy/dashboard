<p id="notice"><%= notice %></p>

<h1>Gastos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tipo Gasto</th>
      <th>Date create</th>
      <th>Hour create</th>
      <th>Total</th>
      <th>Tipo Pago</th>
      <th>Price Dolar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.name %></td>
        <td><%= expense.expense_type.description %></td>
        <td><%= expense.date_create %></td>
        <td><%= expense.hour_create.strftime('%H:%M') %></td>
        <td><%= expense.price.show_total %></td>
        <td><%= expense.pay_type %></td>
        <td><%= expense.price.show_dolar_price %></td>
        <td><%= link_to 'Show', expense %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

